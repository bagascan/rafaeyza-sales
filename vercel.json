{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
 "crons": [
    {
      "path": "/api/cron/reset-status",
      "schedule": "0 20 * * *"
    }
  ]
}
